<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:weightSum="6">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/layoutAppetizers"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectanglelayout"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center|top"
                            android:layout_weight="3"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/imgAppetizers"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:src="@drawable/appetizer"
                                android:tag="bg1" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/txtAppetizers"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/background_3"
                            android:gravity="center"
                            android:text="Appetizer"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textview_high" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDeserts"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectanglelayout"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center|top"
                            android:layout_weight="3"
                            android:gravity="center">


                            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgDeserts"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:src="@drawable/dessert"
                                android:tag="bg1" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/txtDeserts"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/background_3"
                            android:gravity="center"
                            android:text="Dessert"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textview_high" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/layoutBeverages"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectanglelayout"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center|top"
                            android:layout_weight="3"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/imgBeverages"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="13dp"
                                android:src="@drawable/beverage"
                                android:tag="bg1" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/txtBeverages"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/background_3"
                            android:gravity="center"
                            android:text="Beverage"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textview_high" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEntrees"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectanglelayout"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center|top"
                            android:layout_weight="3"
                            android:gravity="center">


                            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgEntrees"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:src="@drawable/entree"
                                android:tag="bg1" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/txtEntrees"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/background_3"
                            android:gravity="center"
                            android:text="Entrees"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textview_high" />
                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/layoutBreads"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectanglelayout"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center|top"
                            android:layout_weight="3"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/imgBreads"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="13dp"
                                android:src="@drawable/breads"
                                android:tag="bg1" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/txtBreads"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/background_3"
                            android:gravity="center"
                            android:text="Bread"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textview_high" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBiryanis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectanglelayout"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center|top"
                            android:layout_weight="3"
                            android:gravity="center">


                            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgBiryanis"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:src="@drawable/biryanis"
                                android:tag="bg1" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/txtLunch"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/background_3"
                            android:gravity="center"
                            android:text="Biryani"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textview_high" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>



        </ScrollView>






    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
